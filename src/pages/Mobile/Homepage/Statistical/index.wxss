.statisticalPage {
  background-color: #f5f5f5;
  min-height: 900px;
  padding-top: 42px;
}
.statisticalPage .topText {
  width: 100%;
  height: 20px;
  padding: 12px 0;
  text-align: center;
  color: #333333;
  font-size: 14px;
  line-height: 20px;
}
.statisticalPage .theTabs {
  margin-top: 12px;
}
.statisticalPage .theTabs :global .ant-tabs-nav {
  background-color: #ffffff;
  padding: 10px;
  margin: 0;
}
.statisticalPage .theTabs :global .ant-tabs-nav .ant-tabs-tab {
  width: 80px;
  height: 34px;
  padding: 6px;
  margin: 0 5.5px;
  background: #f5f5f5;
  border-radius: 27px;
  color: #999999;
  font-size: 16px;
  line-height: 22px;
}
.statisticalPage .theTabs :global .ant-tabs-nav .ant-tabs-tab-active {
  border-color: rgba(0, 102, 255, 0);
  background: rgba(0, 102, 255, 0.2);
  color: #0066FF;
}
.statisticalPage .moduleTitle {
  font-size: 16px;
  font-weight: bold;
  line-height: 22px;
  text-align: left;
}
.statisticalPage .moduleTitle:before {
  display: inline-block;
  width: 3px;
  height: 12px;
  line-height: 22px;
  color: #333333;
  vertical-align: baseline;
  background-color: rgba(0, 102, 255);
  content: '';
  margin-right: 4px;
}
.statisticalPage .container {
  margin: 10px;
  padding: 10px;
  background: #ffffff;
  border-radius: 8px;
}
.statisticalPage .allLinks {
  font-size: 12px;
  line-height: 22px;
  color: #999999;
}
.statisticalPage .serviceNum {
  margin: 20px 0;
}
.statisticalPage .serviceNum h2 {
  color: rgba(0, 102, 255);
}
.statisticalPage .serviceNum p {
  color: #999999;
}
.statisticalPage .chartsContainer {
  width: 100%;
  height: 95%;
  padding: 20px 0;
}
.statisticalPage .iconContainer {
  position: absolute;
}
.statisticalPage .iconStyle {
  position: relative;
  font-size: 21px;
}
.statisticalPage .iconAfter {
  height: 100%;
  line-height: 100%;
  margin-left: 26px;
}
